@model HotelManagementProject.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1 class="text-center text-danger">Delete Reservation</h1>

<div class="card mx-auto" style="max-width: 600px; border: 1px solid #ddd; padding: 20px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);">
    <div class="card-body">
        <h4 class="card-title text-center text-danger">Are you sure you want to delete this?</h4>
        <hr />
        <h5>Reservation Details</h5>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.GuestEmail)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.GuestEmail)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RoomNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.RoomNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CheckInDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CheckInDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CheckOutDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PaymentMethod)
            </dd>
        </dl>

        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
            @Html.HiddenFor(model => model.Id)
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
