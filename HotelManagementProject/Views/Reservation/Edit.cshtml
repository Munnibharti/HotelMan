@model HotelManagementProject.Models.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<h2 class="text-center">Edit Reservation</h2>

<div class="card mx-auto" style="max-width: 600px; border: 1px solid #ddd; padding: 20px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);">
    <div class="card-body">
        <form asp-action="Edit">
            <!-- Guest Email Dropdown -->
            <div class="form-group">
                <label asp-for="GuestEmail" class="control-label"></label>
                <select asp-for="GuestEmail" asp-items="ViewBag.GuestEmails" class="form-control"></select>
                <span asp-validation-for="GuestEmail" class="text-danger"></span>
            </div>

            <!-- Room Number Dropdown -->
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <select asp-for="RoomNumber" asp-items="ViewBag.RoomNumbers" class="form-control"></select>
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

            <!-- Payment Method Dropdown -->
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" asp-items="ViewBag.Payments" class="form-control"></select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <!-- Check-In Date -->
            <div class="form-group">
                <label asp-for="CheckInDate" class="control-label"></label>
                <input asp-for="CheckInDate" class="form-control" type="date" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <!-- Check-Out Date -->
            <div class="form-group">
                <label asp-for="CheckOutDate" class="control-label"></label>
                <input asp-for="CheckOutDate" class="form-control" type="date" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <!-- Total Amount -->
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control" type="number" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
