@model HotelManagementProject.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room_Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room_Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room_Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room_Type)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room_Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room_Status)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this Room?');">
        @Html.HiddenFor(model => model.Id)
        <div class="form-group text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
        </div>
    </form>
</div>
