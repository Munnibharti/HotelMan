@{
    ViewBag.Title = "Receptionist Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="~/images/receptionist-logo.png" alt="Receptionist Logo" class="img-fluid mb-4" style="max-width: 150px;" />
            <h1 class="display-4">Welcome, @ViewBag.UserName</h1>
            <p class="lead">Manage reservations, guests, and room availability efficiently.</p>
        </div>
    </div>

    <div class="row mt-5">
        <!-- Reservation Actions -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reservation Management</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="btn btn-primary btn-block" asp-controller="Reservation" asp-action="Create">
                                <i class="fas fa-plus"></i> Make Reservation
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="btn btn-danger btn-block" asp-controller="Reservation" asp-action="Delete">
                                <i class="fas fa-trash"></i> Cancel Reservation
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="btn btn-warning btn-block" asp-controller="Reservation" asp-action="Edit">
                                <i class="fas fa-edit"></i> Update Reservation
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="btn btn-info btn-block" asp-controller="Reservation" asp-action="Index">
                                <i class="fas fa-list"></i> View Reservation Details
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Room and Guest Management -->
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Room and Guest Management</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="btn btn-success btn-block" asp-controller="Room" asp-action="Index">
                                <i class="fas fa-bed"></i> Check Room Availability
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="btn btn-secondary btn-block" asp-controller="Guest" asp-action="Create">
                                <i class="fas fa-user-plus"></i> Add Guest
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="btn btn-dark btn-block" asp-controller="Guest" asp-action="Index">
                                <i class="fas fa-users"></i> View Guest Details
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a class="btn btn-link" asp-action="Login">Back to Login</a>
    </div>
</div>
