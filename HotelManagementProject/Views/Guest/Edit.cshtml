@model HotelManagementProject.Models.Guest

@{
    ViewData["Title"] = "Edit Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - Horizon Hotel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <p class="text-muted text-center">Update guest details below</p>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Guest Information</h4>
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Guest ID (readonly) -->
                            <div class="form-group">
                                <label asp-for="Id" class="control-label font-weight-bold"></label>
                                <input asp-for="Id" class="form-control" readonly />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>

                            <!-- Guest Name -->
                            <div class="form-group">
                                <label asp-for="Guest_Name" class="control-label font-weight-bold"></label>
                                <input asp-for="Guest_Name" class="form-control" />
                                <span asp-validation-for="Guest_Name" class="text-danger"></span>
                            </div>

                            <!-- Guest Email -->
                            <div class="form-group">
                                <label asp-for="Guest_Email" class="control-label font-weight-bold"></label>
                                <input asp-for="Guest_Email" class="form-control" />
                                <span asp-validation-for="Guest_Email" class="text-danger"></span>
                            </div>

                            <!-- Guest Phone -->
                            <div class="form-group">
                                <label asp-for="Guest_Phone" class="control-label font-weight-bold"></label>
                                <input asp-for="Guest_Phone" class="form-control" />
                                <span asp-validation-for="Guest_Phone" class="text-danger"></span>
                            </div>

                            <!-- Guest Address -->
                            <div class="form-group">
                                <label asp-for="Guest_Address" class="control-label font-weight-bold"></label>
                                <input asp-for="Guest_Address" class="form-control" />
                                <span asp-validation-for="Guest_Address" class="text-danger"></span>
                            </div>

                            <!-- Save Button -->
                            <div class="form-group text-center">
                                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg px-4" />
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ml-2">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index">Back to Guest List</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
