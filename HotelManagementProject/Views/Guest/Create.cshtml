@model HotelManagementProject.Models.Guest
@{
    ViewData["Title"] = "Create Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - Horizon Hotel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center display-4">@ViewData["Title"]</h1>
        <h4 class="text-center">Fill in the details below to create a new guest record</h4>
        <hr class="mb-4" />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Guest_Name" class="font-weight-bold">Guest Name</label>
                        <input asp-for="Guest_Name" class="form-control" placeholder="Enter guest name" />
                        <span asp-validation-for="Guest_Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Guest_Email" class="font-weight-bold">Guest Email</label>
                        <input asp-for="Guest_Email" class="form-control" placeholder="Enter guest email" />
                        <span asp-validation-for="Guest_Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Guest_Phone" class="font-weight-bold">Phone Number</label>
                        <input asp-for="Guest_Phone" class="form-control" placeholder="Enter guest phone number" />
                        <span asp-validation-for="Guest_Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Guest_Address" class="font-weight-bold">Address</label>
                        <input asp-for="Guest_Address" class="form-control" placeholder="Enter guest address" />
                        <span asp-validation-for="Guest_Address" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Create Guest" class="btn btn-success btn-lg btn-block" />
                    </div>
                </form>

                <div class="text-center">
                    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Guest List</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
