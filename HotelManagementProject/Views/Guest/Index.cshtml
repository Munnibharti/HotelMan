@model IEnumerable<HotelManagementProject.Models.Guest>

@{
    ViewData["Title"] = "Guest List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - Horizon Hotel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="text-right mb-3">
            <a asp-action="Create" class="btn btn-success">Add New Guest</a>
            <a asp-controller="Home" asp-action="Dashboard" asp-route-viewType="ReceptionistDashboard">Go back to Dashboard</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Guest List</h4>
                <hr />

                @if (Model.Any())
                {
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Guest_Name)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Guest_Email)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Guest_Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Guest_Address)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guest in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => guest.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => guest.Guest_Name)</td>
                                    <td>@Html.DisplayFor(modelItem => guest.Guest_Email)</td>
                                    <td>@Html.DisplayFor(modelItem => guest.Guest_Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => guest.Guest_Address)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@guest.Id" class="btn btn-sm btn-primary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@guest.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        No guests found. Click <strong>Add New Guest</strong> to create a new entry.
                    </div>
                }
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to Main Menu</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
