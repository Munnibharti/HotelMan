@using HotelManagementProject.Models
@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Staff List";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Salary</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.user_Name</td>
                    <td>@staff.Position</td>
                    <td>@staff.salary.ToString("C")</td> <!-- Displaying salary in currency format -->
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = staff.Id }, new { @class = "btn btn-primary btn-sm mx-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = staff.Id }, new { @class = "btn btn-danger btn-sm mx-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Create" class="btn btn-success">Add New Staff</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        <a class="btn btn-secondary btn-block" asp-controller="Role" asp-action="Create">Add Role for Staff</a>
         
    </div>
</div>
