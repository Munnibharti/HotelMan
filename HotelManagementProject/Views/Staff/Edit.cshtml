@model HotelManagementProject.Models.Staff

@{
    ViewData["Title"] = "Edit Staff";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Horizon Hotel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <p class="text-muted text-center">Update staff details below</p>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Staff Information</h4>
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Staff ID (readonly) -->
                            <div class="form-group">
                                <label asp-for="Id" class="control-label font-weight-bold"></label>
                                <input asp-for="Id" class="form-control" readonly />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>

                            <!-- Staff Name -->
                            <div class="form-group">
                                <label asp-for="user_Name" class="control-label font-weight-bold">Name</label>
                                <input asp-for="user_Name" class="form-control" />
                                <span asp-validation-for="user_Name" class="text-danger"></span>
                            </div>

                            <!-- Staff Password -->
                            <div class="form-group">
                                <label asp-for="Password" class="control-label font-weight-bold">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Staff Position -->
                            <div class="form-group">
                                <label asp-for="Position" class="control-label font-weight-bold">Position</label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <!-- Staff Salary -->
                            <div class="form-group">
                                <label asp-for="salary" class="control-label font-weight-bold">Salary</label>
                                <input asp-for="salary" class="form-control" />
                                <span asp-validation-for="salary" class="text-danger"></span>
                            </div>

                            <!-- Save Button -->
                            <div class="form-group text-center">
                                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg px-4" />
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ml-2">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index">Back to Staff List</a>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
