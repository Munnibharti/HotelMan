@model HotelManagementProject.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Delete Staff</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center text-danger">Are you sure you want to delete this staff member?</h4>
                    <hr />

                    <h5>Staff Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.user_Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.user_Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Password)</dt>
                        <dd class="col-sm-8">******</dd> <!-- Masked Password -->

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Position)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.salary)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.salary)</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this staff member?');">
                        @Html.HiddenFor(model => model.Id)
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-danger me-3">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
